package geekForgeeksProblems;

public class FindPeekElement {
 static int sol(int[] arr){
	 if(arr.length == 0){
		 return arr[0];
	 }
	 if(arr[0] >= arr[1]){
		 return arr[0];
	 }
	 if(arr[n-1] >= arr[n-2]){
		 return arr[n-1];
	 }
	 
	 for(int i=1; i<=arr.length-2; i++){
		 if(arr[i] >= arr[i-1] && arr[i] >= arr[i+1]){
			 return arr[i];
		 }
	 }
	 
	 return-1;
 }
	public static void main(String[] args) {
		int[] arr = {1,2,3};
		
		int res = sol(arr);
   System.out.println(res);
	}

}
